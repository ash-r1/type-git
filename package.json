{
  "name": "type-git",
  "version": "0.1.0",
  "description": "Type-safe Git wrapper library with LFS support, progress tracking, and abort control for Node.js/Deno/Bun",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/adapters/node/index.d.ts",
      "import": "./dist/adapters/node/index.js"
    },
    "./bun": {
      "types": "./dist/adapters/bun/index.d.ts",
      "import": "./dist/adapters/bun/index.js"
    },
    "./deno": {
      "types": "./dist/adapters/deno/index.d.ts",
      "import": "./dist/adapters/deno/index.js"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:bun": "bun test test/bun/",
    "test:deno": "deno test --allow-run --allow-read --allow-write --allow-env --config deno.json test/deno/",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "git-lfs",
    "typescript",
    "type-safe",
    "node",
    "deno",
    "bun",
    "progress",
    "abort-controller"
  ],
  "author": "Ash",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ash/type-git.git"
  }
}
