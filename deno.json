{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "lib": ["deno.window", "ES2022"],
    "strict": true
  },
  "unstable": ["sloppy-imports"],
  "tasks": {
    "test": "deno test --allow-run --allow-read --allow-write --allow-env test/deno/",
    "test:smoke": "deno test --allow-run --allow-read --allow-write --allow-env test/deno/smoke.test.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  }
}
